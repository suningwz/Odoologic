<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_label_wizard_form" model="ir.ui.view">
        <field name="name">create_label.wizard.form</field>
        <field name="model">create_label.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="hide_confirm_button" invisible="1"/>
                <field name="nr_threads" string="Number of threads" attrs="{'invisible': [('hide_confirm_button','=',True)]}"/>
                <p class="text-center">
                    <field name="sale_orders_not_confirmed"/><br/><br/>
                    <field name="sale_orders_without_label"/>
                </p>
            <footer>
                <button name="bulk_sales_order_approve" string="Create Labels" type="object" default_focus="1" class="oe_highlight" attrs="{'invisible': [('hide_confirm_button','=',True)]}"/>
                <button name="action_close" string="Close" type="object" default_focus="1" class="oe_highlight"/>
            </footer>
            </form>
        </field>
    </record>
    <record id="create_label_wizard" model="ir.actions.act_window">
        <field name="name">Create Labels</field>
        <field name="res_model">create_label.wizard</field>
        <field name="view_mode">form</field>
<!--        <field name="view_id" ref="create_label_wizard_form"/>-->
        <field name="target">new</field>
        <field name="binding_view_types">form,list</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
    </record>
</odoo>